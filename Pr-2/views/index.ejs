<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List | Home</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 20px;
        }

        .navbar-brand {
            font-weight: 600;
        }

        .task-card {
            transition: transform 0.2s;
        }

        .task-card:hover {
            transform: translateY(-2px);
            /* border: 1px solid gray !important; */
        }

       

       


      

        .stats-card {
            border-radius: 10px;
        }

        footer {
            margin-top: 50px;
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
        <div class="container">
            <a class="navbar-brand text-primary" href="/">
                <i class="bi bi-check2-square me-2"></i>To-Do List
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/add-task">Add Task</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Header Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h2">My To-Do List</h1>
                    <a href="add-task.html" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Add New Task
                    </a>
                </div>
                <p class="text-muted">Manage your daily tasks efficiently</p>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-4 col-6 mb-3">
                <div class="card bg-primary text-white stats-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title">Total Tasks</h5>
                                <h2 class="mb-0"><%= todos.length%></h2>
                            </div>
                            <i class="bi bi-list-task fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-6 mb-3">
                <div class="card bg-success text-white stats-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title">complete </h5>
                                <h2 class="mb-0"><%= todos.filter(t => t.status === "complete").length %></h2>
                            </div>
                            <i class="bi bi-check2-circle fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-6 mb-3">
                <div class="card bg-warning text-white stats-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title">Pending</h5>
                                <h2 class="mb-0"><%= todos.filter(t => t.status === "pending").length %></h2>
                            </div>
                            <i class="bi bi-clock fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>

        </div>



        <!-- Tasks List -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Today's Tasks</h5>
                    </div>
                    <div class="card-body p-0">
                        <!-- Task Item 1 -->
                       

                        <!-- Task Item 2 -->
                        <% todos.forEach((todo,i)=>{%>

                        <div class="card task-card priority-medium mb-0 border-0 rounded-0 border-bottom">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="form-check me-3">
                                    
                                        <p class="mb-0"><%= todo.desc%></p>
                                    </div>
                                    <div class="ms-auto">
                                        <span class="badge bg-warning me-2"><%=todo.priority%></span>
                                        <span class="badge bg-success me-2"><%=todo.category%></span>
                                        <span class="badge bg-success me-2"><%=todo.status%> </span>
                                    <a href="/edit-todo/<%= todo.id %>" class="text-decoration-none">
                                         <button class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                    </a>

                                    <a href="/delete-todo/<%= todo.id%>">
  
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </a>
                                     
                                    </div>
                                </div>
                            </div>
                        </div>
                            <% })%>

                       
                    </div>
                </div>
            </div>
        </div>

        <!-- Empty State (Hidden by default) -->
        <div class="row mt-4 d-none" id="emptyState">
            <div class="col-12 text-center">
                <i class="bi bi-clipboard-check display-1 text-muted"></i>
                <h3 class="mt-3">No tasks yet</h3>
                <p class="text-muted">You don't have any tasks. Add your first task to get started!</p>
                <a href="add-task.html" class="btn btn-primary">Add Your First Task</a>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>To-Do List App</h5>
                    <p class="text-muted">A simple and efficient way to manage your daily tasks.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-0">&copy; 2023 To-Do List App. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
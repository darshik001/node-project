<%- include('header')%>

<div class="container py-4">
  <div class="card shadow-lg border-0">
    <div class="card-header bg-dark text-white py-3">
      <h4 class="mb-0 d-flex align-items-center">
        <i class="fa-solid fa-plus me-2"></i> Add New Movie
      </h4>
    </div>

    <div class="card-body p-4">
      <form action="/add-movie" method="post" enctype="multipart/form-data">

  <div class="row">
    <!-- LEFT -->
    <div class="col-lg-6">
      <h5 class="mb-4">
        <i class="fa-solid fa-film me-2"></i> Basic Information
      </h5>

      <div class="form-floating mb-3">
        <input type="text" name="title" class="form-control" placeholder="Movie Title"required>
        <label>Movie Title</label>
      </div>

      <div class="form-floating mb-3">
        <input type="text" name="director" class="form-control" placeholder="Director"required>
        <label>Director</label>
      </div>

          <div class="input-group mb-3">
            <span class="input-group-text">
              <i class="fa-solid fa-calendar-days"></i>
            </span>
            <input type="date" name="year" class="form-control"required>
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text">
              <i class="fa-solid fa-clock"></i>
            </span>
            <input type="number" name="duration" class="form-control" placeholder="Duration (min)"required>
          </div>

      <div class="input-group mb-3">
        <span class="input-group-text">
          <i class="fa-solid fa-globe"></i>
        </span>
        <select name="language" class="form-select" required>
        <option>Hindi</option>
        <option>English</option>
        <option>Telugu</option>
      </select>
      </div>

      

    
    </div>

    <!-- RIGHT -->
    <div class="col-lg-6">
      <h5 class="mb-4">
        <i class="fa-solid fa-circle-info me-2"></i> Additional Information
      </h5>

        <label class="form-label">
        <i class="fa-solid fa-tag"></i> Genre
      </label>
      <select name="genre" class="form-select" required>
        <option>Action</option>
        <option>Comedy</option>
        <option>Drama</option>
        <option>Horror</option>
        <option>Sci-Fi</option>
        <option>Romance</option>
        <option>Thriller</option>
        <option>Documentary</option>
      </select>
          <label class="form-label">
        <i class="fa-solid fa-tag"></i> Industry
      </label>
      <select name="industry" class="form-select mb-3" required>
        <option>Bollywood</option>
        <option>Hollywood</option>
      </select>
     
      <label class="form-label">
        <i class="fa-solid fa-star"></i> IMDB Rating
      </label>
      <div class="input-group mb-3">
        <input
          type="number"
          name="rating"
          class="form-control"
          placeholder="Rating 1-10"
          min="0"
          max="10">
        <span class="input-group-text" required>/10</span>
      </div>

      <label class="form-label">
        <i class="fa-solid fa-image"></i> Movie Poster
      </label>
      <div class="input-group mb-3">
        <input type="file" name="poster" class="form-control" required>
        <button class="btn btn-outline-secondary" type="button">
          <i class="fa-solid fa-upload"></i>
        </button>
      </div>
    </div>
  </div>

  <!-- Buttons -->
  <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
    <button type="submit" class="btn btn-primary">
      Add to Library
    </button>
  </div>

</form>

    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

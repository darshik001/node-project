  opacity: 0;
  position: absolute;
}

</style>
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex">
                    <h4 class="page-title">Blogs</h4>
                   
                    <div class="mx-auto">
                        <form action="">


                        </form>
                    </div>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Blogs</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
               
                <%blogs.forEach((blog)=>{%>
 <div class="col-6 col-md-4 col-lg-3">
                <div class="card">
                <img class="card-img-top" src="<%=blog.authorImage%>" alt="Title" />
                <div class="card-body">
                    <h4 class="card-title text-center"><%=blog.title%></h4>
                    <p class="card-text">Author : <%=blog.name%></p>
                    <p class="card-text">Category : <%=blog.category%></p>
                    <p class="card-text">Status : <%=blog.status%></p>
                    <p class="card-text">Date : <%=blog.date%></p>
                    <p class="card-text">Content : <%= blog.content.length > 50 ? blog.content.substring(0, 50) : blog.content %>
                    
                    <% if (blog.content.length > 50) { %>
                     <a href="/blog/<%= blog.slug %>" class="text-decoration-none">...</a>
                    <% } %>
                    </p>
                </div>
                <div class="card-footer text-center">
                    <a href="/blog/view-blog/<%=blog.id%>" class="btn btn-outline-success">view blog</a>
                </div>
             </div>
             </div>
                <%})%>
            
             

            </div>

            <!-- ============================================================== -->
            <!-- End PAge Content -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Right sidebar -->
            <!-- ============================================================== -->
            <!-- .right-sidebar -->
            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
       

    </div>
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
    
        <%- include('../footer')%>
    

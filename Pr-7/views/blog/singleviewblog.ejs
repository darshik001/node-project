<%- include('../header')%>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Blog Details</h4>
                 <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/blog/view-blog">Blog</a></li>
                                <li class="breadcrumb-item active" aria-current="page">View Blogs</li>
                            </ol>
                        </nav>
                    </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <!-- Author Section -->
            <div class="col-lg-4 col-md-5 mb-4">
                <div class="card border-0 shadow-lg h-100">
                    <div class="card-body text-center p-4">
                        <div class="position-relative mb-4">
                            <img src="<%=blog.authorImage%>" 
                                 alt="<%=blog.name%>" 
                                 class="rounded-circle img-fluid border border-5 border-light shadow"
                                 style="width: 180px; height: 180px; object-fit: cover;">
                        </div>
                        
                        <h3 class="card-title mb-2"><%=blog.name%></h3>
                        <p class="text-muted mb-3">
                            <i class="fas fa-user-edit me-2"></i>Author
                        </p>
                        
                        <div class="d-grid gap-2">
                            <a href="/blog/edit-blog/<%=blog.id%>" 
                               class="btn btn-warning btn-lg rounded-pill">
                                <i class="fas fa-edit me-2"></i>Edit Blog
                            </a>
                            <a href="/blog/delete-blog/<%=blog.id%>" 
                               class="btn btn-outline-danger btn-lg rounded-pill"
                               onclick="return confirm('Are you sure you want to delete this blog?')">
                                <i class="fas fa-trash me-2"></i>Delete Blog
                            </a>
                        </div>
                        
                        <hr class="my-4">
                        
                        <div class="row text-center">
                            <div class="col-6 border-end">
                                <div class="text-muted ">Category</div>
                                <div class="h5 mb-0">
                                    <span class="badge bg-primary text-black  rounded-pill px-3 text-black">
                                        <%=blog.category%>
                                    </span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-muted small">Status</div>
                                <div class="h5 mb-0">
                                    <span class="badge <%=blog.status === 'Published' ? 'bg-success' : 'bg-warning'%> bg-gradient rounded-pill px-3">
                                        <%=blog.status%>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Blog Content Section -->
            <div class="col-lg-8 col-md-7">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5">
                        <!-- Blog Header -->
                        <div class="mb-5">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h1 class="display-6 fw-bold text-dark mb-2"><%=blog.title%></h1>
                                    <div class="d-flex align-items-center text-muted mb-4">
                                        <div class="me-4">
                                            <i class="far fa-calendar-alt me-2"></i>
                                            <span class="fw-medium"><%=blog.date%></span>
                                        </div>
                                    </div>
                                </div>
                              
                            </div>
                            
                            <!-- Featured Image (if available) -->
                            <div class="position-relative mb-5">
                                     <img src="<%=blog.blogImage%>" 
                                     alt="Blog Cover" 
                                     class="img-fluid rounded-3 shadow-sm"
                                     style="height: 300px; width: 100%; object-fit: cover;">
                            </div>
                        </div>

                        <!-- Blog Content -->
                        <div class="blog-content">
                           
                            
                            <div class="content-body fs-5 lh-lg">
                                <div class="mb-5">
                                    <%= blog.content %>
                                </div>
                                
                             
                            </div>
                        </div>

                      
                      
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>

<%- include('../footer')%>
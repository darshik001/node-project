<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Book</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/">Book Manager</a>
    <div>
      <a href="/" class="btn btn-outline-light btn-sm me-2">Home</a>
      <a href="/addbooks" class="btn btn-outline-light btn-sm">Add Book</a>
    </div>
  </div>
</nav>

<!-- Form -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">âž• Add New Book</h4>
        </div>
        <div class="card-body">

          <form action="/add-book" method="post">
            <div class="mb-3">
              <label class="form-label">Book Name</label>
              <input type="text" name="title" class="form-control" placeholder="Enter book name">
            </div>

            <div class="mb-3">
              <label class="form-label">Author Name</label>
              <input type="text" name="author" class="form-control" placeholder="Enter author name">
            </div>

            <div class="mb-3">
              <label class="form-label">Category</label>
              <select class="form-select" name="category">
                <option>Select category</option>
                <option value="Fiction">Fiction</option>
                <option value="Education">Education</option>
                <option value="Biography">Biography</option>
                <option value="Technology">Technology</option>
              </select>
            </div>

            <div class="mb-3">
              <label class="form-label">Price</label>
              <input type="text" name="price" class="form-control" placeholder="Enter price">
            </div>

            <div class="text-end">
              <button type="reset" class="btn btn-secondary">Clear</button>
              <button type="submit" class="btn btn-success">Add Book</button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

</body>
</html>
